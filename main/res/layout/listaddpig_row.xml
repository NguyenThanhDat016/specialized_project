            android:text="Cân nặng:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="282dp"
        android:layout_height="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtpigadd"
            android:layout_width="match_parent"
