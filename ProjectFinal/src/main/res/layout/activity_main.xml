<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hongdam"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="@string/trip"
        android:textColor="@color/yellow"
        android:textIsSelectable="false"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listviewship"
        android:layout_width="match_parent"
        android:layout_height="575dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnAvailabel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/hong"
            android:scaleType="centerInside"
            android:src="@drawable/_con" />

        <ImageButton
            android:id="@+id/btnUnavailabel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/_het"
            android:background="@color/hong"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnaddS"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/_them"
            android:background="@color/hong"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnLanguageSwitch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/hong"
            android:scaleType="centerInside"
            android:src="@drawable/_chuyendoi"/>
    </LinearLayout>
</LinearLayout>